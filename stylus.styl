@import url(http://fonts.googleapis.com/css?family=Roboto:300,400,500);
html
  background-color #f1f1f1
  font-family "Roboto"

.box
	position relative
	margin auto
	height 410px
	top 40px
	left 0
	z-index 200
	right 0
	width 400px
	color #666
	border-radius 3px
	background #FFF
	margin-bottom 100px
	box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
	overflow hidden
	h1
	  margin-left 20px
		margin-top 0
		font-size 24px
		font-weight 300
		color #cfd8dc
		line-height 35px
	button
		background #cfd8dc
		border 0
		color #009688
		padding 10px
		font-size 16px
		font-weight 300
		width 330px
		margin 20px auto
		display block
		cursor pointer
		-webkit-transition all 0.4s
		transition all 0.4s
		border-radius 2px
		&:active
			background #009688
			color #263238
		&:hover
			background #009688
			color #FFF
			-webkit-transition all 0.4s
			transition all 0.4s
	p
		font-size 14px
		text-align center

#header
	background #009688
	position relative
	height 100px
	width 100%
	margin-bottom 30px

#cont-lock
	width 100%
	height 65px
	position relative

.lock
	text-align center
	color white
	position absolute
	left 0
	right 0
	margin 0
	top 0
	bottom 0
	line-height 65px
	font-size 28px

#bottom-head
	position relative
	background #00796b
	height 35px
	&::after
		content ''
		width 0px
		height 0px
		display block
		position absolute
		margin auto
		left 0
		right 0
		bottom 0
		border-bottom 7px solid white
		border-right 7px solid rgba(0,0,0,0)
		border-left 7px solid rgba(0,0,0,0)
		border-top 7px solid rgba(0,0,0,0)

.group
	position relative
	margin-bottom 35px
	margin-left 40px

.inputMaterial
	font-size 18px
	padding 10px 10px 10px 5px
	display block
	width 300px
	border none
	border-bottom 1px solid #757575
	&:focus
		outline none
		.highlight
			-webkit-animation inputHighlighter 0.3s ease
			-moz-animation inputHighlighter 0.3s ease
			animation inputHighlighter 0.3s ease

label
	color #999
	font-size 14px
	font-weight normal
	position absolute
	pointer-events none
	left 5px
	top 10px
	transition 0.2s ease all
	-moz-transition 0.2s ease all
	-webkit-transition 0.2s ease all

.inputMaterial:focus ~ label, .inputMaterial:valid ~ label
	top -20px
	font-size 14px
	color #009688

.bar
	position relative
	display block
	width 315px
	&:before
		left 50%
	&:after
		right 50%

.bar:before, .bar:after
	content ''
	height 2px
	width 0
	bottom 1px
	position absolute
	background #009688
	transition 0.2s ease all
	-moz-transition 0.2s ease all
	-webkit-transition 0.2s ease all

.inputMaterial:focus ~ .bar:before, .inputMaterial:focus ~ .bar:after
	width 50%

.footer-text
	color #cfd8dc

.sign-up
	color white
	cursor pointer
	&:hover
		color #b2dfdb

body
	background #eceff1

#container-a
	border-radius 50%
	width 60px
	height 60px
	position fixed
	top 20px
	right 20px
	overflow hidden
	transition $transition
	box-shadow $shadow-L3
	#badge
		width 100%
		height 100%
		background-image url("https://lh3.googleusercontent.com/-X-aQXHatDQY/Uy86XLOyEdI/AAAAAAAAAF0/TBEZvkCnLVE/w140-h140-p/fb3a11ae-1fb4-4c31-b2b9-bf0cfa835c27")
		background-size 100%
		transition $transition
		position absolute
	&:hover .codepen
		display: block

&:hover
	#badge
		width 150px
		height 150px
		transition $transition
		filter blur(7px)

#letter
	display none
	z-index 20
	width 100%
	height 100%
	position absolute
	font-size 32px
	color white
	text-align center
	line-height 60px
	margin auto
	left 0
	right 0
	position absolute
	cursor pointer
	span
		font-family 'Roboto'
.profile-name:hover
	text-decoration underline
a:link, a:visited
	text-decoration none